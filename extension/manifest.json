{
  "name": "Facebook Toolbox",
  "version": "0.8.0",
  "manifest_version": 2,
  "description": "Adds Facebook features that are not included in the existing platform",
  "homepage_url": "http://jonhemstreet.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "https://www.facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/plugins/facebook/facebook.js",
        "src/inject/facebook.js"
      ],
      "css": [
        "src/plugins/facebook/facebook.css"
      ],
      "all_frames": false,
      "run_at": "document_end"
    }
  ]
}