{
  "name": "Titan's Toolkit",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Referral",
  "homepage_url": "http://jonhemstreet.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "contentSettings",
    "cookies",
    "notifications",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "src/inject/inject.js"
      ],
      "all_frames": false,
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "js/facebook/facebook.js"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "all_frames": false,
      "run_at": "document_end"
    }
  ]
}