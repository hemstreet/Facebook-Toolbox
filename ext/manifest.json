{
    "name":             "Titan's Toolkit",
    "version":          "0.0.1",
    "manifest_version": 2,
    "description":      "Referral",
    "homepage_url":     "jonhemstreet.com",
    "icons":            {
        "16":  "icons/icon16.png",
        "48":  "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "default_locale":   "en",

    "background": {
        "scripts":    [
            "src/bg/background.js"
        ],
        "persistent": true
    },

    "permissions":     [
        "contentSettings",
        "cookies",
        "notifications",
        "https://*/*, http://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*"

            ],

            "js": [
                "src/inject/inject.js"

            ]

        },{

            "matches": [
                "https://www.facebook.com/*"

            ],

            "css": [
                "src/inject/inject.css"

            ]

        }

    ]

}